@model proyectoAgencia.Entities.UsuarioEnt

@{
    ViewData["Title"] = "Cambiar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Editar", "Usuario", FormMethod.Post, new { @class = "text-start" }))
{
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="card card-plain col-lg-8">

            <div class="card-body">

                @Html.HiddenFor(x => x.IdUsuario)

                @Html.Label("Identificación")
                <div class="input-group input-group-outline mb-3">
                    @Html.TextBoxFor(x => x.Identificacion, new { @class="form-control", @disabled="true", @type="text",
                @placeholder="Identificación", @style="background-color:lightgray" })
                </div>

                @Html.Label("Nombre")
                <div class="input-group input-group-outline mb-3">
                    @Html.TextBoxFor(x => x.Nombre, new { @class="form-control", @disabled="true", @type="text",
                @placeholder="Nombre", @style="background-color:lightgray" })
                </div>

                @Html.Label("Correo Electrónico")
                <div class="input-group input-group-outline mb-3">
                    @Html.TextBoxFor(x => x.CorreoElectronico, new { @class="form-control", @placeholder="Correo Electrónico" })
                </div>

                @Html.Label("Perfil")
                <div class="input-group input-group-outline mb-3">
                    @Html.DropDownListFor(x => x.IdRol, ViewBag.rolesDropDown as List<SelectListItem>, new { @class="form-control" })
                </div>

                @if (ViewBag.Mensaje != null)
                {
                    <div style="text-align:center" class="alert alert-light" role="alert">
                        @ViewBag.Mensaje
                    </div>
                }

                <div style="text-align:right">
                    <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" style="width:25%!important">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
}

