@model proyectoAgencia.Entities.AgenciaViajesEnt

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Formularios.cshtml";
}

<span class="mask bg-gradient-dark opacity-6"></span>
<div class="container my-auto">
    <div class="row">
       
               
                <div class="card-body">

                    @using (Html.BeginForm("RegistrarAgenciaViajes", "AgenciaViajes", FormMethod.Post, new { @class = "text-start" }))
                    {
                        <div class="input-group input-group-outline mb-3">
                            @Html.TextBoxFor(x => x.NombreAgencia, new { @class="form-control", @type="text", @placeholder="Nombre de la agencia" })
                        </div>
                        <div class="input-group input-group-outline mb-3">
                            @Html.TextBoxFor(x => x.Direccion, new { @class="form-control", @type="text", @placeholder="Direccion exacta " })
                        </div>
                        <div class="input-group input-group-outline mb-3">
                            @Html.TextBoxFor(x => x.Ciudad, new { @class="form-control", @placeholder="Ciudad" })
                        </div>



                        @if (ViewBag.Mensaje != null)
                        {
                            <div style="text-align:center" class="alert alert-light" role="alert">
                                @ViewBag.Mensaje
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Ingresar Info</button>
                        </div>
                       
                    }
                </div>
            </div>
        </div>
    </div>
</div>


